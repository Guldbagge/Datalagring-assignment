<UserControl x:Class="Presentation.WPF.Views.GetOneUserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.WPF.Views"
             
             xmlns:viewmodels="clr-namespace:Presentation.WPF.ViewModels"
             xmlns:models="clr-namespace:Presentation.WPF.Models"
             d:DataContext="{d:DesignInstance Type={x:Type viewmodels:GetOneUserViewModel}}"
             
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="380">
    <Grid Background="#007EA7">
        <StackPanel Margin="0,30,0,30">
            <Button Command="{Binding GoBackCommand}" Content="Go Back to Main Menu" Margin="10,0,0,30" />
            <Label Content="Email Address" />
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="10,0,10,5" />
            <TextBlock Text="Enter email" Foreground="Gray" />

            <TextBlock Text="{Binding FirstName}" Foreground="White" />
            <TextBlock Text="{Binding LastName}" Foreground="White" />

            <Button Command="{Binding GetUserCommand}" Content="Get User" Margin="10,20,10,0" />

        </StackPanel>
    </Grid>

</UserControl>
